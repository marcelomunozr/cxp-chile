            .checkbox
              input(type='checkbox', id="envio-documentos")
              label(for="envio-documentos") Envío de documentos
            .checkbox
              input(type='checkbox', id="recarga-celulares")
              label(for="recarga-celulares") Recarga de celulares
            .checkbox
              input(type='checkbox', id="pago-cuentas")
              label(for="pago-cuentas") Pago de cuentas

      .filter-content
