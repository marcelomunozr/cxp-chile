          .wrapp
            .checkbox
              input(type='checkbox', id="ticket")
              label(for="ticket") Ticket de atención
            .checkbox
              input(type='checkbox', id="reserva")
              label(for="reserva") Reserva de hora de atención

  .btn-bottom-zone
